!!!5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => data.page.description, :name => "description"}
    %meta{:content => "width=device-width", :name => "viewport"}

    %title= data.page.title

    // Vendor Resources
    // jQuery
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"

    // FontAwesome
    = stylesheet_link_tag "http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css"

    // mapbox.js
    = stylesheet_link_tag "//api.tiles.mapbox.com/mapbox.js/v1.4.0/mapbox.css"
    = javascript_include_tag "//api.tiles.mapbox.com/mapbox.js/v1.4.0/mapbox.js"

    // Application Resources
    = stylesheet_link_tag "style"
    = javascript_include_tag "site"

  %body
    %main
      %header
        %a#show-right{:href => "#social"} Social
        %h1 Super Awesome HTML5 Community Calendar!
        %nav
          %ul
            %li
              = link_to 'Home', '/index.html'
      %section#content
        = yield
      %footer
        Developed and designed by Justin and Benjamin
    %footer
    #map

    = javascript_include_tag "app"
